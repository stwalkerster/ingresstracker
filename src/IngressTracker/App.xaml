<Application x:Class="IngressTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:startup="clr-namespace:IngressTracker.Startup"
             xmlns:converter="clr-namespace:IngressTracker.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <startup:ApplicationBootstrapper x:Key="bootstrapper" />

                    <converter:WindowTitleConverter x:Key="WindowTitleConverter" />
                    <converter:DebugConverter x:Key="DebugConverter" />
                    <converter:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter" />
                    <converter:DateFormattingConverter x:Key="DateFormattingConverter" />
                    <converter:HideWhenNullConverter x:Key="HideWhenNullConverter" />
                </ResourceDictionary>

                <ResourceDictionary Source="pack://application:,,,/Fluent;component/Themes/Office2013/Generic.xaml" />

                <ResourceDictionary Source="Styles/Style.xaml" />
                <ResourceDictionary Source="Styles/DataTools.xaml" />
                <ResourceDictionary Source="Styles/Badges.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
